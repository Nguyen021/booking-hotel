@model Umoozi.Domain.Entities.House

<div class="w-100 card border-0 p-4">
    <div class="ml-0 py-3 bg-gradient bg-success card-header">
        <div class="row">
            <div class="col-12 text-center">
                <h2>Create Houses</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4 border">
        <form method="post" class="row">
@*             <div class="alert alert-danger" role="alert" asp-validation-summary="ModelOnly"></div>
            <div class="alert alert-danger" role="alert" asp-validation-summary="All"></div> *@
            <div class="p-3">
                <div class="form-floating py-2 col-12">
                    <input asp-for="@Model.Name" class="form-control border shadow" />
                    <label asp-for="Name" class="ms-2"></label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="@Model.Description" class="form-control border shadow" />
                    <label asp-for="Description" class="ms-2"></label>
                    <span asp-validation-for="Description" class="text-danger"></span>

                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="@Model.SquareFeet" class="form-control border shadow" />
                    <label asp-for="SquareFeet" class="ms-2"></label>
                    <span asp-validation-for="SquareFeet" class="text-danger"></span>

                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="@Model.Price" class="form-control border shadow" />
                    <label asp-for="Price" class="ms-2"></label>
                    <span asp-validation-for="Price" class="text-danger"></span>

                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="@Model.Occupancy" class="form-control border shadow" />
                    <label asp-for="Occupancy" class="ms-2"></label>
                    <span asp-validation-for="Occupancy" class="text-danger"></span>

                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="@Model.ImgUrl" class="form-control border shadow" />
                    <label asp-for="ImgUrl" class="ms-2"></label>
                    <span asp-validation-for="ImgUrl" class="text-danger"></span>

                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-success w-100">
                            <i class="bi bi-check-circle"></i> Create
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="House" asp-action="Index" class="btn btn-secondary w-100">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>