@model House


<div class="w-100 card border-0 p-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h3 class="text-white py-2">Delete Houses</h3>
            </div>
        </div>
    </div>

    <div class="card-body border p-4">
        <form method="post" class="border p-4">
            <input asp-for="Id" hidden />
            <div class="p-3">
                <div asp-validation-summary="ModelOnly" class="alert alert-light" role="alert">
                </div>

                <div class="form-floating py-2 col-12">
                    <input disabled asp-for="@Model.Name" class="form-control border shadow" />
                    <label asp-for="Name" class="ms-2"></label>
                   
                </div>
                <div class="form-floating py-2 col-12">
                    <input disabled asp-for="@Model.Description" class="form-control border shadow" />
                    <label asp-for="Description" class="ms-2"></label>
                   
                </div>
                <div class="form-floating py-2 col-12">
                    <input disabled asp-for="@Model.Price" class="form-control border shadow" />
                    <label asp-for="Price" class="ms-2"></label>
         
                </div>
                <div class="form-floating py-2 col-12">
                    <input disabled asp-for="@Model.Sqft" class="form-control border shadow" />
                    <label asp-for="Sqft" class="ms-2"></label>
             
                </div>
                <div class="form-floating py-2 col-12">
                    <input disabled asp-for="@Model.Occupancy" class="form-control border shadow" />
                    <label asp-for="Occupancy" class="ms-2"></label>
 
                </div>
                <div class="form-floating py-2 col-12">
                    <input disabled asp-for="@Model.ImageUrl" class="form-control border shadow" />
                    <label asp-for="ImageUrl" class="ms-2"></label>

                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button class="btn btn-danger w-100">
                            <i class="bi bi-check-circle"></i> Delete
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-action="Index" asp-controller="House" class="btn btn-secondary w-100">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

