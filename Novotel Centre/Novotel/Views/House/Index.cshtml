@model IEnumerable<House>
@{
    ViewData["Title"] = "houses list";
}

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h3 class="text-white py-2">Houses List</h3>
            </div>
        </div>
    </div>
</div>
<div class="card-body border p-4">
    <div class="row pb-3">
        <div class="col-6 offset-6 text-end">
            <a asp-action="Create" asp-controller="House" class="btn btn-secondary"><i class="bi bi-plus-square-dotted"></i> Add new houses</a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th> Name </th>
                <th> Price </th>
                <th> Sqft </th>
                <th> Occupancy </th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.Price</td>
                    <td>@obj.Sqft</td>
                    <td>@obj.Occupancy</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-action="Update" asp-controller="House" 
                                   class="btn btn-secondary mx-2" asp-route-houseId="@obj.Id">
                                <i class="bi bi-pencil-square"></i> Update
                            </a>
                            <a asp-action="Delete" asp-controller="House"
                               class="btn btn-danger mx-2" asp-route-houseId="@obj.Id">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                      
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>