@model HouseNumberVM

<div class="w-100 card border-0 p-4 mb-1">
    <div class="card-header shadow-lg ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h3 class="text-secondary py-2">Create Houses Number</h3>
            </div>
        </div>
    </div>

    <div class="card-body border p-4">
        <form method="post" class="border p-4">
            <div class="p-3">
                <div asp-validation-summary="ModelOnly" class="alert alert-light" role="alert">
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="@Model.HouseNumber.House_Number" class="form-control border shadow" />
                    <label asp-for="HouseNumber.House_Number" class="ms-2"></label>
                    <span asp-validation-for="HouseNumber.House_Number" class="text-danger"></span>
                </div>


