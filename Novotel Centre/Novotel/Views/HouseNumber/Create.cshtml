                    <select asp-for="@Model.HouseNumber.HouseId" id="HouseId" name="HouseId" class="form-control border shadow">
                        @if  (ViewData["Houses"] is List<House> houses){
                            @foreach (var house in houses)
                            {
                                <option selected="selected" value="@house.Id">@house.Name</option>
                            }
                        }
                    </select>
                    <label asp-for="HouseNumber.HouseId" class="ms-2">HouseId</label>
                </div>  *@


                <div class="form-floating py-2 col-12">
                    <select asp-for="@Model.HouseNumber.HouseId" asp-items="@Model.HouseList" class="form-select border shadow">
                     
                                <option selected="selected" disabled >--Select</option>
                        
                    </select>
                    <label asp-for="HouseNumber.HouseId" class="ms-2">HouseId</label>
                </div>


                <div class="form-floating py-2 col-12">
                    <input asp-for="@Model.HouseNumber.SpecialDetails" class="form-control border shadow" />
                    <label asp-for="HouseNumber.SpecialDetails" class="ms-2"></label>
                    <span asp-validation-for="HouseNumber.SpecialDetails" class="text-danger"></span>
                </div>
                
              
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button class="btn btn-success w-100">
                            <i class="bi bi-check-circle"></i> Create
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-action="Index" asp-controller="HouseNumber" class="btn btn-secondary w-100">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial.cshtml" />
    }
}